<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:drawable="@color/grey"/>
    <item android:state_pressed="true">

        <shape android:shape="rectangle">
            <gradient android:angle="135" android:endColor="@color/persian" android:startColor="@color/persian" />
            <corners android:radius="10dp" />
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="@color/persian" android:startColor="@color/persian" />
            <corners android:radius="5dp" />
        </shape>

    </item>
</selector>
